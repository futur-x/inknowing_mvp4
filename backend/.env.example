# Application Settings
APP_NAME=InKnowing API
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=development
API_V1_PREFIX=/v1

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres@localhost:5432/inknowing_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0
DATABASE_POOL_PRE_PING=True
DATABASE_ECHO=False

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# WeChat Configuration (Optional)
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret
WECHAT_MERCHANT_ID=your-merchant-id
WECHAT_API_KEY=your-api-key

# Alipay Configuration (Optional)
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-private-key
ALIPAY_PUBLIC_KEY=alipay-public-key

# AI Model Configuration
AI_PRIMARY_PROVIDER=openai
AI_PRIMARY_MODEL=gpt-4
AI_API_KEY=your-ai-api-key
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# File Upload Settings
UPLOAD_MAX_SIZE=10485760  # 10MB
UPLOAD_ALLOWED_EXTENSIONS=txt,pdf
UPLOAD_PATH=/tmp/uploads

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_FREE_DAILY=20
RATE_LIMIT_BASIC_MONTHLY=200
RATE_LIMIT_PREMIUM_MONTHLY=500
RATE_LIMIT_SUPER_MONTHLY=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Admin Settings
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090